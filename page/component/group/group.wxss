.header {
    display: flex;
    width: 100%;
    height: 140rpx;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.header-item {
    display: flex;
    width: 230rpx;
    height: 60rpx;
    overflow: hidden;
}

.header-item-center .status-img {
    margin-left: 25rpx;
}

.header-item-last {
    direction: rtl; 
}

.status-img {
    width: 60rpx;
    height: 60rpx;
    margin-right: 6rpx; 
    background-color: rgb(102,102,102);
}

.status-text {
    display: block;
    width: 164rpx;
    height: 60rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #777;
    overflow: hidden;
}

.header-item-last .status-text {
    width: 100rpx;
}

.status-text text {
    display: block;
}

.detail-box {
    display: flex;
    width: 100%;
    height: 260rpx;
    padding: 30rpx 20rpx 30rpx 30rpx;
    background-color: #fff;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.detail-img {
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin-right: 24rpx;
}

.detail-content {
    width: 476rpx;
    height: 200rpx;
}

.detail-title {
    display: -webkit-box;
    width: 100%;
    height: 96rpx;
    margin: -1rpx 0 70rpx;
    line-height: 48rpx;
    font-size: 32rpx;
    color: #444;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.new-price {
    font-size: 36rpx;
    color: #fb5d5d;
}

.odd-price {
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #999;
    text-decoration: line-through;
}

.countdown {
    width: 100%;
    height: 160rpx;
    margin: 24rpx 0;
    padding-top: 6rpx;
    color: #878787;
    text-align: center;
    box-sizing: border-box;
    background-color: #fff;
    background-image: url(http://m.ipinbb.com/ipbb/static/images/group-bg.png);
    background-position: 0 160rpx;
    background-size: cover;
}

.countdown-top {
    margin-bottom: 6rpx;
    line-height: 54rpx; 
    font-size: 32rpx;
}

.countdown-center {
    line-height: 40rpx;
    font-size: 28rpx;
}

.countdown-btm {
    font-size: 24rpx;
}

.color-red {
    margin: 0 8rpx;
    color: #fb5d5d;
}

.lists-box {
    background-color: rgb(255,255,255);
}

.lists-title {
    display: block;
    width: 100%;
    line-height: 96rpx;
    font-size: 36rpx;
    color: #444;
    text-indent: 34rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.lists-content {
    padding: 0 30rpx;
}

.item-box {
    display: flex;
    width: 100%;
    height: 88rpx;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #ebebeb;
}

.user-img {
    display: block;
    width: 88rpx;
    height: 88rpx;
    margin-right: 16rpx;
    border-radius: 50%;
}

.item-content {
    width: 480rpx;
    height: 88rpx;
    color: #999;
}

.item-name {
    display: block;
    width: 100%;
    margin-bottom: 4rpx;
    line-height: 40rpx;
    font-size: 28rpx;
}

.item-title {
    line-height: 34rpx;
    font-size: 24rpx;
}

.item-head {
    display: block;
    width: 128rpx;
    height: 48rpx;
    margin-top: 20rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fb5d5d;
    border: 1rpx solid #fb5d5d;
    border-radius: 4rpx;
    box-sizing: border-box;
}