.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.user-header {
    width: 100%;
    height: 448rpx;
    margin-bottom: 20rpx;
    padding-top: 75rpx;
    box-sizing: border-box;
    background: linear-gradient(to top left,#595959,#bcbcbc);
}

.user-img {
    width: 196rpx;
    height: 196rpx;
    margin: 0 auto 42rpx;
    background-color: rgb(255,255,255);
    border-radius: 50%;
    box-shadow: 1px 4px 5px #5b5b5b;   
}

.user-header .login-btn {
    width: 300rpx;
    height: 80rpx;
    margin: 0 auto;
    line-height: 80rpx;
    color: rgb(255,255,255);
    border: 2rpx solid rgb(255,255,255);
    border-radius: 4rpx;
    box-sizing: border-box;
}

.user-header .other-button-hover {
    background-color: rgb(255,255,255);
}

.user-article {
    background-color: rgb(255,255,255);
}

.user-order {
    display: flex;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid rgb(216,216,216);
    box-sizing: border-box;
}

.order-all {
    width: 630rpx;
    font-size: 32rpx;
    color: rgb(102,102,102);
}

.order-look {
    font-size: 24rpx;
    color: rgb(153,153,153);
}

.order-class {
    display: flex;
    width: 100%;
    height: 186rpx;
    box-sizing: border-box;
}

.item-order {
    width: 20%;
    height: 155rpx;
    padding-top: 30rpx;
    text-align: center;
    color: rgb(153,153,153);
}

.item--order-img {
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
    margin-bottom: 10rpx;
    background-color: rgb(102,102,102);
}

.item--order-text {
    line-height: 34rpx;
    font-size: 24rpx;
}


